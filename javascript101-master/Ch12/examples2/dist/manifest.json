{
    "name": "ByeByeFB",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "ByeByeFB",
    "short_name": "ByeByeFB",  
    "content_scripts": [
        {
            "matches": ["https://zh-tw.facebook.com/*", "https://www.facebook.com/*"],
            "css": ["./css/main.css", "./bower_components/bootstrap/dist/css/bootstrap.css"],
            "js": ["./js/bundle.js"]
        }
    ],
    "browser_action": {
        "default_title": "讀書法寶", 
        "default_popup": "./popup.html"    
    },
    "background": {
        "page": "./index.html"
    }   
}